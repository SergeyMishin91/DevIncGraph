<script type="text/javascript">
    $('document').ready(function () {
        $('#button').on('click', function () {
            $('#right .form-control').each(function () {
                if ($(this).val() != '') {
                    $(this).removeClass('empty_field');
                } else {
                    $(this).addClass('empty_field');
                }
            });
        });
    });

</script>